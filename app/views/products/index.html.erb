<p id="notice"><%= notice %></p>

<h1>All Products</h1>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th><span>Title</span><br/>Description</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Buy</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag "products/#{product.image_url}" %></td>
        <td><span class="product_title"><%= product.title %></span><%= product.description %></td>
        <td><%= print_price(product.price) %></td>
        <% if product.stock > 0 %>
        <td> <span class="in_stock"> <%= print_stock(product.stock) %>  (<%= product.stock %>) </span></td>
        <% else %>
         <td> <span class="out_stock"> <%= print_stock(product.stock) %></span></td>
        <% end %>
        <td><%= button_to "Add to Cart", order_items_path(product_id: product.id) %></td>
         <td><%= link_to 'View', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<p><%= link_to "Create a New Product", new_product_path, id: "new_product" %></p>
